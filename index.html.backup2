    <!-- Matrix Background Effect -->
    <script>
        // Canvas設定
        const matrixCanvas = document.getElementById('matrix-canvas');
        const matrixCtx = matrixCanvas.getContext('2d');

        // キャンバスサイズをウィンドウに合わせる
        matrixCanvas.width = window.innerWidth;
        matrixCanvas.height = window.innerHeight;

        // 文字セット (0と1のみ)
        const matrixChars = '01';
        const matrixCharArray = matrixChars.split('');

        // 列の設定
        const matrixFontSize = 16;
        const matrixColumns = Math.floor(matrixCanvas.width / matrixFontSize);
        const matrixDrops = Array(matrixColumns).fill(1);

        // 緑色、少し遅めの速度
        const matrixSpeed = 50; // ミリ秒

        // Matrix描画関数 (ランダムな降り方)
        function drawMatrix() {
            // 半透明の黒で画面を覆う (トレイルエフェクト)
            matrixCtx.fillStyle = 'rgba(0, 0, 0, 0.05)';
            matrixCtx.fillRect(0, 0, matrixCanvas.width, matrixCanvas.height);

            // 文字スタイル (濃い緑色)
            matrixCtx.fillStyle = '#00ff41';
            matrixCtx.font = `${matrixFontSize}px monospace`;
            matrixCtx.shadowBlur = 10;
            matrixCtx.shadowColor = '#00ff41';

            // 各列に文字を描画 (ランダムな位置と速度)
            for (let i = 0; i < matrixDrops.length; i++) {
                // ランダムに描画するか決定 (より不規則に)
                if (Math.random() > 0.3) {
                    // 0か1をランダムに選択
                    const text = matrixCharArray[Math.floor(Math.random() * matrixCharArray.length)];
                    
                    // ランダムなX位置 (列から少しずらす)
                    const xOffset = (Math.random() - 0.5) * 5;
                    const x = i * matrixFontSize + xOffset;
                    const y = matrixDrops[i] * matrixFontSize;

                    // ランダムな透明度で変化を付ける
                    const alpha = 0.5 + Math.random() * 0.5;
                    matrixCtx.globalAlpha = alpha;

                    // 文字を描画
                    matrixCtx.fillText(text, x, y);
                    
                    // 透明度をリセット
                    matrixCtx.globalAlpha = 1;
                }

                // ランダムに列をリセット
                if (matrixDrops[i] * matrixFontSize > matrixCanvas.height && Math.random() > 0.95) {
                    matrixDrops[i] = 0;
                }

                // ランダムな速度で次の位置へ (0.5~1.5倍速)
                matrixDrops[i] += 0.5 + Math.random();
            }
        }

        // アニメーションループ
        setInterval(drawMatrix, matrixSpeed);

        // ウィンドウリサイズ対応
        window.addEventListener('resize', () => {
            matrixCanvas.width = window.innerWidth;
            matrixCanvas.height = window.innerHeight;
            matrixDrops.length = Math.floor(matrixCanvas.width / matrixFontSize);
            matrixDrops.fill(1);
        });
    </script>
    
